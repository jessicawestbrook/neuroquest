{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Edit",
      "Write",
      "MultiEdit",
      "NotebookEdit",
      "Bash(npm test)",
      "Bash(npm run lint)",
      "Bash(npm run typecheck:*)",
      "Bash(npm audit:*)",
      "Bash(npm run build:*)",
      "Bash(node:*)",
      "Bash(npm install:*)",
      "Bash(mkdir:*)",
      "Bash(npm run dev:*)",
      "Bash(grep:*)",
      "Bash(timeout:*)",
      "Bash(git add:*)",
      "Bash(rm:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ Task completed! Checking build...'; npm run build && echo '✅ Build successful!' || echo '❌ Build failed - check errors above'; echo '🚀 Starting dev server (will remain running)...'; npm run dev",
            "timeout": 60
          }
        ]
      }
    ]
  }
}